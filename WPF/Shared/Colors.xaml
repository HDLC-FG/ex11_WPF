<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="PrimaryColor">Black</Color>
    <Color x:Key="SecondaryColor">White</Color>
    <Color x:Key="OnMouseOverColor">Blue</Color>
    <Color x:Key="IsSelectedColor">Yellow</Color>
    
    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="OnMouseOverColorBrush" Color="{StaticResource OnMouseOverColor}" />
    <SolidColorBrush x:Key="IsSelectedColorBrush" Color="{StaticResource IsSelectedColor}" />
</ResourceDictionary>